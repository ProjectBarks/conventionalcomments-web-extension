{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],

  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "lib": ["ES2020", "DOM"],
    "types": ["svelte", "jest"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "es2015",
    "jsx": "react"
  }
}
